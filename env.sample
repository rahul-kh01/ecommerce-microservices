# E-commerce Microservices Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
POSTGRES_PASSWORD=admin
POSTGRES_DB_ORDER=orderdb
POSTGRES_DB_PRODUCT=productdb
POSTGRES_USER=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# MongoDB Configuration  
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin
MONGO_INITDB_DATABASE=ecommerce
MONGO_HOST=localhost
MONGO_PORT=27017

# Redis Configuration
REDIS_PASSWORD=
REDIS_HOST=localhost
REDIS_PORT=6379

# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_REALM=ecom-app
KEYCLOAK_HOST=localhost
KEYCLOAK_PORT=8080

# Kafka Configuration
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://localhost:9092
KAFKA_LISTENERS=PLAINTEXT://0.0.0.0:9092
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Service Ports
CONFIG_SERVER_PORT=8888
EUREKA_SERVER_PORT=8761
GATEWAY_PORT=8085
PRODUCT_PORT=8081
USER_PORT=8082
ORDER_PORT=8083
NOTIFICATION_PORT=8084

# JWT Configuration
JWT_ISSUER_URI=http://localhost:8080/realms/ecom-app
JWT_AUDIENCE=account
JWT_CLIENT_ID=oauth2-pkce

# Database URLs
DATABASE_URL_ORDER=jdbc:postgresql://localhost:5432/orderdb
DATABASE_URL_PRODUCT=jdbc:postgresql://localhost:5432/productdb
MONGODB_URL=mongodb://localhost:27017/ecommerce

# Kafka Topics
ORDER_CREATED_TOPIC=order-created
NOTIFICATION_GROUP=notification-group

# Test User Credentials
TEST_USERNAME=alice
TEST_PASSWORD=password
TEST_USER_ID=faed058d-7b9f-4257-a53a-904c408e11bc

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8761/eureka
CONFIG_SERVER_URL=http://localhost:8888

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_COM_ECOMMERCE=DEBUG
LOG_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG
LOG_LEVEL_ORG_SPRINGFRAMEWORK_WEB=DEBUG

# Application Messages
APP_MESSAGE_ORDER="Order Service is running!"
APP_MESSAGE_PRODUCT="Product Service is running!"
APP_MESSAGE_USER="User Service is running!"
APP_MESSAGE_GATEWAY="Gateway Service is running!"
APP_MESSAGE_NOTIFICATION="Notification Service is running!"

# Circuit Breaker Configuration
CIRCUIT_BREAKER_TIMEOUT=5000
CIRCUIT_BREAKER_RETRY_ATTEMPTS=3
CIRCUIT_BREAKER_WAIT_DURATION=1000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_CAPACITY=200

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Monitoring Configuration
ACTUATOR_ENABLED=true
ACTUATOR_EXPOSED_ENDPOINTS=health,info,metrics,prometheus
PROMETHEUS_ENABLED=true

# Development Configuration
SPRING_PROFILES_ACTIVE=dev
DEVELOPMENT_MODE=true
HOT_RELOAD_ENABLED=true
